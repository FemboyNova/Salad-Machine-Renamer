{
    "manifest_version": 3,
    "name": "Salad Machine Renamer",
    "version": "1.1",
    "description": "Customize machine names on Salad.com",
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "https://salad.com/earn*",
      "https://app-api.salad.com/api/v2/demand-monitor/gpu"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://salad.com/earn*"
        ],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
}