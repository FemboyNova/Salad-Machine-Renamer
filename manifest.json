{
    "manifest_version": 3,
    "name": "Salad Machine Renamer",
    "version": "1.0",
    "description": "Customize machine names on Salad.com",
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "https://salad.com/earn*"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://salad.com/earn*"
        ],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }